doctype html
head
  title Garam Masala
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS for styling and layout
  link(href='./../css/style_sheet.css' rel='stylesheet' type='text/css')
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous"> 
  // MAPBOX CSS FILE
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css' rel='stylesheet' />
  // MAPBOX GEOCODER CSS FILE
  <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.0/mapbox-gl-geocoder.css" type="text/css">


body(onload="myFunction()")

  #loader
  #content.container-fluid(style='display:none;')


    .row
      .col-lg-9.menu_container
        .row.justify-content-center.mobile_cart_row(style='background-color:gray;')
          button.cart_items_mobile <i class="fas fa-shopping-cart"></i>  &emsp; 0
          button.home_button <i class="fas fa-home"></i>
        .row.justify-content-center(style='margin-top:50px;')
          .col-lg-11.order_cover
             
            img.order_page_image(src='./../images/home_page/order_online2.jpg')
          .col-lg-12.about_order_page
            p.order_title Garam Masala
            p.order_subtitle Garam Masala - The Fine Indian Cuisine & Bar, 196 Robinson St, Moncton, NB E1C 5C4, Canada
            p.order_hours Open Hours: 11:00 AM - 9:30 PM
            .row.justify-content-between.delivery_type
              .col-lg-3
                p.delivery_title
              .col-lg-4
                input#pickup(type='radio' name='delivery' value='pickUp' checked="checked")
                label(for='pickup') Pick Up
                input#delivery(type='radio' name='delivery' value='delivery')
                label(for='delivery') Delivery
            .row.justify-content-center.about_order
          .col-lg-12.menu_icon
            ul.menu_list
              li
                img.appetizer.icon(src='./../images/icons/appetizer.png').active
                p.menu_title 
                  br
                  |APPETIZER
              li
                img.veggie.icon(src='./../images/icons/veggie.png')
                p.menu_title 
                  |VEGGIE 
                  br
                  |MAINCOURSE
              li
                img.nonVeg.icon(src='./../images/icons/non_veg.png')
                p.menu_title
                  |NON VEG
                  br
                  |MAINCOURSE
              li
                img.tandoori.icon(src='./../images/icons/tandoori.png')
                p.menu_title 
                  |TANDOORI 
                  br
                  |BITES
              li
                img.biryani.icon(src='./../images/icons/biryani_wrap.png')
                p.menu_title 
                  |BIRYANI 
                  br
                  |& WRAPS
              li
                img.bread.icon(src='./../images/icons/rice.png')
                p.menu_title 
                  |BREAD 
                  br
                  |& RICE
              li
                img.desserts.icon(src='./../images/icons/dessert.png')
                p.menu_title 
                  br
                  |DESSERTS
        .row.menu_row.appetizer.justify-content-between
      .col-lg-3.order
        .row.close_mobile_content &times;
        .row
          .col.mobile_content
               
            .row.justify-content-center
              button.home_button <i class="fas fa-home"></i>
              button.cart_items <i class="fas fa-shopping-cart"></i>  &emsp; 0
              
            .row
              p.type_of_order  
            .row.justify-content-center.check_out   

            
  #mobile_container.container-fluid(style='display:none;')
    .col-lg-12.col-md-12.col-sm-12.order_menu_box
      .row.close_menu_box &times;
    .col-lg-12.col-md-12.col-sm-12.order
        .row
          p.type_of_order  
        .row.justify-content-center.check_out      

  #content.order_container(style='display:none')
    .row.order_header.justify-content-start 
      .col-lg-12.col-md-12.col-sm-12.order_box
        .close &times;
        p.order_name 
        p.order_description(style='font-size:18px;line-height:1.2')

        p(style='width:100%;') 
          |<span style='width:100%;font-weight:550;'>Preferences</span>
          br
          |Mention any special requests or extra instructions
        textarea#instructions(style='width:100%;',rows='4') 
        p.num_of_chars(style='float:right') 200 characters left

        .spicy        
          label(for='spicy_options' style='font-weight:550') How spicy you want it to be?
          select#spicy_options(name='spicy_options' style='width:100%;')
            option(value='Mild') Mild
            option(value='Medium') Medium
            option(value='Hot') Hot

        .sold_out        
          label(for='sold_out_options' style='font-weight:550') If this item is sold out:
          select#sold_out_options(name='sold_out_options' style='width:100%;')
            option(value='Refund-0') Refund this item
            option(value='Contact-1') Contact Me
            option(value='Cancel-2') Cancel the entire order

        .quantity_column 
          p(style=" float:left; width:25%;font-weight:550;") Quantity
          <i class="fa fa-minus-circle fa-lg" style="padding:10px; " aria-hidden="true"></i>
          input.qty(value=1 min="1" style='width:30%; text-align:center; border:none;' )
          <i class="fa fa-plus-circle fa-lg" style="padding:10px; " aria-hidden="true"></i>
          button.cart_btn(style='display:block;width:40%;margin-left:30%;')    
   







