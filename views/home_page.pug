    .reservation_now.container-fluid
      .row.justify-content-center
        .col-lg-5      
          .row.reservation_form
            .col-lg-12
              h3.reserve_table_title  Book Your Table
              p.reserve_table_subtitle RESERVATION NOW
            .col-lg-6.form_elem
              input.form-control(type='text' placeholder='First Name' )
            .col-lg-6.form_elem
              input.form-control.last_name(type='text' placeholder='Last Name')
            .col-lg-6.form_elem
              input.form-control.contact_number(type='text' placeholder='Your Phone Number')
            .col-lg-6.form_elem
              input.form-control(type="text" placeholder='Your Email')
            .col-lg-6.form_elem
              input.form-control(type="text" placeholder="Date" onfocus="(this.type='date')" onblur="if(this.value==''))")
              
            .col-lg-6.form_elem
              input.form-control(type="text" placeholder="Time" onfocus="(this.type='time')" onblur="if(this.value=='')")
            .col-lg-6.form_elem
              input.form-control(type="text" placeholder="Seats")
            .col-lg-12.form_elem
              button.reserve_now RESERVE NOW
