body  
  #wrapper
    .top_login.container-fluid
      .row.justify-content-end(style='background-color:black;padding-right:5%;')
        <i class="fab fa-facebook-square fa-2x" style='margin-right:10px'></i>
        <i class="fab fa-instagram-square fa-2x"style='margin-right:10px'></i>
        .page_link_login.login_link(style='margin-top:2px;')
          - 
          if user
            .dropdown
              button.btn.btn-primary.dropdown-toggle(type='button' data-toggle='dropdown' style='background-color:black;border:none')= `Welcome, ${user.name.split(' ')[0]}`
                ul.dropdown-menu(style='text-align:center;background-color:black;')
                  li
                    a#home(href='/home') Home
                  li
                    a#order(href='/order') My Orders
                  li
                    a#updateMe(href='/updateMe') Update Me
                  li
                    a(href='/home') Logout
          else
              a.login_link(href='/login' ) Login
      .row.justify-content-center
        .col-lg-8.header
          img(src='./images/home_page/my_logo.png')
        .col-lg-12.header-mobile
          img(src='./images/home_page/my_logo.png')
          .side_icon
            <i class="fas fa-bars fa-2x"></i>
      .row.justify-content-center.login_form 
        .col-lg-4.sign_up_box(style='text-align:center;')
          form(action='/action_page.php')
            input#current_password(type='password' name='current_password' placeholder='current password')
            br
            br
            input#new_password(type='password' name='new_password' placeholder='enter new password')
            br
            br
            input#confirm_password(type='password' name='confirm_password' placeholder='confirm password')
            br
            br
          .notification_container(style='background-color:black;margin-top:10px;')
            p.notify(style='color:orange;font-weight:550;')
      .row.justify-content-center
        .col(style='text-align:center;')
          button.save_btn Save Changes
          button.back_to_home_btn Home    
  .mobile_wrapper.toggled.container-fluid
    .row.header-mobile.justify-content-center
      .col-lg-12
        img(src='./images/home_page/my_logo.png')
        .close_btn
          <i class="fas fa-times fa-2x"></i> 

    .row.justify-content-center
      .col-lg-8.mobile_menu
        .mobile_home.page_link_mobile
          a(href='/home') HOME
        .mobile_aboutUs.page_link_mobile
          a(href='/aboutUs') ABOUT US
        .mobile_ourMenu.page_link_mobile 
          a(href='/ourMenu') OUR MENU
        
        .mobile_gallery.page_link_mobile
          a(href='/gallery') GALLERY
        .mobile_Catering.page_link_mobile
          a(href='/catering') CATERING
        .mobile_contactUs.page_link_mobile 
          a(href='/contactUs') CONTACT US

